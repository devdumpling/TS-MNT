{
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
